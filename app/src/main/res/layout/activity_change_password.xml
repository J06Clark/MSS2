<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/colors">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change Password"
        android:id="@+id/changewPasswordTitle"
        android:gravity="center_horizontal"
        android:textColor="#7588ed"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPasswordText"
        android:hint="@string/password_text"
        android:background="@drawable/text_box2"
        android:textColorHint="#ff7b797b"
        android:layout_below="@+id/changewPasswordTitle"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textIsSelectable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmChnagePasswordText"
        android:hint="@string/confirm_password"
        android:background="@drawable/text_box2"
        android:textColorHint="#FF7B797B"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_below="@+id/newPasswordText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:id="@+id/confirmButton"
        android:background="@drawable/button_grey"
        android:onClick="changePassword"
        android:clickable="true"
        android:layout_below="@+id/confirmChnagePasswordText"
        android:layout_alignRight="@+id/confirmChnagePasswordText"
        android:layout_alignEnd="@+id/confirmChnagePasswordText"
        android:layout_marginTop="33dp" />

</RelativeLayout>